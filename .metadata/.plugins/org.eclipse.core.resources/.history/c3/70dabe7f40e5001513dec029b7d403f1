package cons;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class ConsoleInterp {

	@SuppressWarnings("null")
	public static void main(String[] args) {
		String[] parts;
		
				InputStreamReader isr = new InputStreamReader ( System.in );
		BufferedReader br = new BufferedReader ( isr );
				String s = null;
				System.out.printf("Enter String%n");
		try {
		   while ( (s = br.readLine ()) != null ) {
			  parts = s.split(" ");
			  String[] partsout=new String[parts.length-1];
			  for (int i=1; i<(parts.length); i++)
			  {
				  partsout[i-1] = parts[i];
				 
		  	  }
			  switch (parts[0]) {
	            case "ping":  System.out.println("Your command is ping");
	                     break;
	            case "echo":           	
	            	    	System.out.printf("Your command is 'echo' with the parameter %s",String.join(" ", partsout));
	                     break;
	            case "login": System.out.printf("Your command is 'login' with the parameter %s",String.join(" ", partsout));
	                     break;
	            case "list":  System.out.printf("Your command is 'list' with the parameter %s",String.join(" ", partsout));
	                     break;
	            case "msg":  System.out.println("Your command is msg");
	                     break;
	            case "file":  System.out.printf("Your command is 'file' with the parameters: name=%s, filename=%s", parts[1], parts[2]);
	                     break;
	            case "exit":  System.exit(0);
	                     break;
	            default: System.out.println("Invalid command");
	                     break;
	        }
		   }
		}
		catch ( IOException ioe ) {
		   // won't happen too often from the keyboard
		}
	}

}
