package cons;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class ConsoleInterp {

	public static void main(String[] args) {
		String[] parts;
		InputStreamReader isr = new InputStreamReader ( System.in );
		BufferedReader br = new BufferedReader ( isr );
				String s = null;
				 System.out.print("Enter String");
		try {
		   while ( (s = br.readLine ()) != null ) {
			  parts = s.split(" ");
			  switch (parts[0]) {
	            case "ping":  System.out.println("Your command is ping");
	                     break;
	            case "echo":  System.out.println("Your command is echo with the parameter ");
	                     break;
	            case "login": System.out.printf("Your command is login with the parameters: name=%s", parts[1], "password=%s",parts[2]);
	                     break;
	            case "list":  System.out.println("Your command is list");
	                     break;
	            case "msg":  System.out.println("Your command is msg");
	                     break;
	            case "file":  System.out.println("Your command is file");
	                     break;
	            case "exit":  System.exit(0);
	                     break;
	            default: System.out.println("Invalid command");
	                     break;
	        }
		   }
		}
		catch ( IOException ioe ) {
		   // won't happen too often from the keyboard
		}
	}

}
